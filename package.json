{
  "name": "clone-tabnews",
  "version": "1.0.0",
  "description": "Implementação do https://www.tabnews.com.br para o https://curso.dev",
  "main": "index.js",
  "scripts": {
    "dev": "npm run services:up && npm run services:wait:database && npm run migrations:up && (trap 'npm run services:stop' EXIT INT TERM ; next dev)",
    "test": "npm run services:up && concurrently -n next,jest --hide next -k -s command-jest \"next dev\" \"jest --runInBand\"",
    "posttest": "npm run services:stop",
    "test:watch": "jest --watchAll --runInBand --verbose",
    "services:up": "docker compose --file infra/compose.yaml --env-file .env.development up --detach",
    "services:stop": "docker compose --file infra/compose.yaml --env-file .env.development stop",
    "services:down": "docker compose --file infra/compose.yaml --env-file .env.development down",
    "services:wait:database": "node infra/scripts/wait-for-postgres.js",
    "migrations:up": "node-pg-migrate -m infra/migrations --envPath .env.development up",
    "migrations:create": "node-pg-migrate --migrations-dir infra/migrations create",
    "lint:check": "npm run lint:eslint:check && npm run lint:prettier:check",
    "lint:eslint:check": "eslint .",
    "lint:prettier:check": "prettier --check .",
    "lint:prettier:fix": "prettier --write .",
    "prepare": "husky",
    "commit": "cz"
  },
  "author": "Maycon",
  "license": "MIT",
  "dependencies": {
    "@typescript-eslint/parser": "8.53.1",
    "async-retry": "1.3.3",
    "dotenv": "17.2.3",
    "dotenv-expand": "12.0.3",
    "next": "16.1.6",
    "next-connect": "1.0.0",
    "node-pg-migrate": "7.6.1",
    "pg": "8.17.2",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "swr": "2.3.8",
    "uuid": "11.1.0"
  },
  "devDependencies": {
    "@commitlint/cli": "20.3.1",
    "@commitlint/config-conventional": "20.3.1",
    "commitizen": "4.3.1",
    "concurrently": "9.2.1",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "9.39.2",
    "eslint-config-next": "16.1.4",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-jest": "29.12.1",
    "husky": "9.1.7",
    "jest": "30.2.0",
    "prettier": "3.8.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
